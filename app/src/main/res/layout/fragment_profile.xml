<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".fragment.ProfileFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <ImageView
            android:id="@+id/companyIcon"
            android:layout_width="382dp"
            android:layout_height="wrap_content"
            android:contentDescription="@string/logo_login"
            android:src="@drawable/iriscube_reply"
            app:layout_constraintBottom_toTopOf="@id/companyIcon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <android.support.constraint.Guideline
            android:id="@+id/guideline"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.4"/>

        <TextView
            android:id="@+id/profileNameLbl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nome"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/companyIcon"
            />

        <TextView
            android:id="@+id/profileNameTxt"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Mario"
            android:textColor="#CCCCCC"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/profileNameLbl"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintTop_toTopOf="@id/profileNameLbl"/>

        <TextView
            android:id="@+id/profileSurnameLbl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Cognome"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profileNameLbl"
            />

        <TextView
            android:id="@+id/profileSurnameTxt"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Rossi"
            android:textColor="#CCCCCC"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/profileSurnameLbl"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintTop_toTopOf="@id/profileSurnameLbl"/>

        <TextView
            android:id="@+id/profileBornDateLbl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Data di nascita"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profileSurnameLbl"
            />

        <TextView
            android:id="@+id/profileBornDateTxt"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="28.12.1989"
            android:textColor="#CCCCCC"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/profileBornDateLbl"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintTop_toTopOf="@id/profileBornDateLbl"/>

        <TextView
            android:id="@+id/profileBornCityLbl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Luogo di nascita"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profileBornDateLbl"
            />

        <TextView
            android:id="@+id/profileBornCityTxt"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Torino"
            android:textColor="#CCCCCC"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/profileBornCityLbl"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintTop_toTopOf="@id/profileBornCityLbl"/>

        <TextView
            android:id="@+id/profileEmailLbl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Email"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profileBornCityLbl"
            />

        <TextView
            android:id="@+id/profileEmailTxt"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="m.rossi@reply.it"
            android:textColor="#CCCCCC"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/profileEmailLbl"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintTop_toTopOf="@id/profileEmailLbl"/>

    </android.support.constraint.ConstraintLayout>

</ScrollView>